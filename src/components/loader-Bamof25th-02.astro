---
const author = "Aniket"
const github = "https://github.com/Bamof25th"
---



<section class="relative flex items-center justify-center h-full w-full">
  <!-- Loader -->
  <div class="loader h-full w-full flex justify-center items-center">
    <div class="w-80 bg-gray-800 rounded-lg overflow-hidden shadow-2xl">
      <div class="bg-gray-700 flex items-center p-2 text-white relative">
        <div class="flex absolute left-3">
          <span class="h-3 w-3 bg-red-500 rounded-full mr-2"></span>
          <span class="h-3 w-3 bg-yellow-500 rounded-full mr-2"></span>
          <span class="h-3 w-3 bg-green-500 rounded-full"></span>
        </div>
        <div class="flex-1 text-center text-sm font-mono">Terminal</div>
      </div>
      <div class="p-4 font-mono text-green-400">
        <div class="flex items-center">
          <span class="mr-2 text-green-500">$</span>
          <span class="animate-pulse">Loading system...</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Author Details -->
  <div class="absolute bottom-0 right-0 text-right">
    <h2 class="text-xs font-medium tracking-wider leading-3">{ author }</h2>
    <a href={github} class="text-[10px] tracking-wider text-blue-500" target="_blank">GitHub Profile</a>
  </div>
</section>

